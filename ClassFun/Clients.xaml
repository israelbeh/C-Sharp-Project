        <TextBox x:Name="ClientZipTxt" MaxLength="10" HorizontalAlignment="Left" Height="22" Margin="139,211,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" BorderThickness="5" ToolTip="Enter 5 digit Zip Code"/>
        <TextBox x:Name="ClientPhoneTxt" MaxLength="14" HorizontalAlignment="Left" Height="23" Margin="265,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" ToolTip="Enter phone number (800-888-8888)" BorderThickness="5"/>

        <TextBox x:Name="ClientEmailTxt" MaxLength="100" HorizontalAlignment="Left" Height="24" Margin="64,269,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" BorderThickness="5"/>
        <ComboBox x:Name="ReferredByCB" HorizontalAlignment="Left" Margin="64,329,0,0" VerticalAlignment="Top" Width="120" BorderThickness="5">
            

        </ComboBox>
        <ComboBox x:Name="FoundOutCB" HorizontalAlignment="Left" Margin="250,329,0,0" VerticalAlignment="Top" Width="120" BorderThickness="5">
            
            <ComboBoxItem Content="Radio"/>
            <ComboBoxItem Content="Billboard"/>
            <ComboBoxItem Content="Family"/>
            <ComboBoxItem Content="Employee"/>
        </ComboBox>
        <Label Content="Found Out" HorizontalAlignment="Left" Margin="250,303,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="5"/>

        <Button x:Name="ClientAddBtn" Content="Add" HorizontalAlignment="Left" Margin="95,382,0,0" VerticalAlignment="Top" Width="74" Height="36" ToolTip="Click to add a new client to Current Clients" RenderTransformOrigin="0.817,1.583" Click="ClientAddBtn_Click" FontWeight="Bold" BorderThickness="5"/>
        <Button x:Name="ClientUpdateBtn" Content="Update" HorizontalAlignment="Left" Margin="265,382,0,0" VerticalAlignment="Top" Width="75" Height="36" ToolTip="Click update to save changes " Click="ClientUpdateBtn_Click" FontWeight="Bold" BorderThickness="5"/>
        <DataGrid x:Name="ClientDataGrid" HorizontalAlignment="Left" IsReadOnly="True" Margin="481,74,0,0" VerticalAlignment="Top" Height="190" Width="471" BorderThickness="5" FontWeight="Bold"/>
        <Button x:Name="ClientFirstBtn" Content="&lt;&lt;" HorizontalAlignment="Left" Margin="512,283,0,0" VerticalAlignment="Top" Width="75" ToolTip="Select First Record" Click="ClientFirstBtn_Click" BorderThickness="5,5,5,3" FontWeight="Bold"/>
        <Button x:Name="ClientPreviousBtn" Content="&lt;" HorizontalAlignment="Left" Margin="627,283,0,0" VerticalAlignment="Top" Width="76" ToolTip="Select Previous Record" Click="ClientPreviousBtn_Click" BorderThickness="5,5,5,3" FontWeight="Bold"/>
        <Button x:Name="ClientNextBtn" Content="&gt;" HorizontalAlignment="Left" Margin="735,283,0,0" VerticalAlignment="Top" Width="76" ToolTip="Select Next Record" Click="ClientNextBtn_Click" BorderThickness="5,5,5,3" FontWeight="Bold"/>
        <Button x:Name="ClientLastBtn" Content="&gt;&gt;" HorizontalAlignment="Left" Margin="847,283,0,0" VerticalAlignment="Top" Width="76" ToolTip="Select Last Record" Click="ClientLastBtn_Click" BorderThickness="5,5,5,3" FontWeight="Bold"/>
        <Label Content="First Name" HorizontalAlignment="Left" Margin="64,70,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="5"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="64,129,0,0" VerticalAlignment="Top" Height="23" RenderTransformOrigin="0.524,0.87" FontWeight="Bold" BorderThickness="0"/>
        <Label Content="Phone" HorizontalAlignment="Left" Margin="265,185,0,0" VerticalAlignment="Top" FontWeight="Bold" RenderTransformOrigin="-0.26,0.938" BorderThickness="5"/>
        <Label Content="ZIP Code" HorizontalAlignment="Left" Margin="139,185,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="5"/>
        <Label Content="Email Address" HorizontalAlignment="Left" Margin="64,238,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="5"/>
        <Label Content="State" HorizontalAlignment="Left" Margin="61,185,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="0"/>
        <Label Content="Reminder" HorizontalAlignment="Left" Margin="308,70,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="5"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Margin="182,70,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.302,0.519" FontWeight="Bold" BorderThickness="5"/>


        <Label Content="Add/Update Client" HorizontalAlignment="Left" Margin="86,26,0,0" VerticalAlignment="Top" Width="264" FontSize="22" FontWeight="Bold"/>

        <Separator HorizontalAlignment="Left" Height="100" Margin="230,178,0,0" VerticalAlignment="Top" Width="424" RenderTransformOrigin="0.5,0.5">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.001"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Button x:Name="ClientEditBtn" Content="Edit Client" HorizontalAlignment="Left" Margin="562,345,0,0" VerticalAlignment="Top" Width="98" ToolTip="Click to Edit Selected Client" Click="ClientEditBtn_Click" BorderThickness="5,5,5,3" FontWeight="Bold"/>



        <Label Content="Referred By" HorizontalAlignment="Left" Margin="64,298,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="5"/>
        <Button x:Name="ClientDeleteBtn" Content="Delete Client" HorizontalAlignment="Left" Margin="785,345,0,0" VerticalAlignment="Top" Width="104" ToolTip="Click to Delete Selected Client" Click="ClientDeleteBtn_Click" BorderThickness="5,5,5,3" FontWeight="Bold"/>

        <Label Content="City" HorizontalAlignment="Left" Margin="308,128,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="5"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="905,410,0,0" VerticalAlignment="Top" Width="71" Click="Button_Click_1" Height="28" BorderThickness="5,5,5,3" FontWeight="Bold" ToolTip="Click to Close window and return to home screen"/>


    </Grid>
</Window>
