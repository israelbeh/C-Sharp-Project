            <ComboBoxItem Content="KY" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="LA" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="ME" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="MD" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="MA" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="MI" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="MN" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="MS" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="MO" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="MT" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="NE" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="NV" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="NH" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="NJ" HorizontalAlignment="Left" Width="130"/>
