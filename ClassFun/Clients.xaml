<Window x:Class="ClassFun.Clients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="468.5" Width="1001" Icon="Images/NDFCICON.jpg">
    <Grid Margin="0,-14,0,-1" HorizontalAlignment="Left" Width="986" RenderTransformOrigin="0.5,0.5" Background="LightBlue" Loaded="Clients_Loaded">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.242"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>

        <TextBox x:Name="ClientFNameTxt" MaxLength="50" HorizontalAlignment="Left" Height="23" Margin="64,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" BorderThickness="5"/>
        <TextBox x:Name="ClientLNameTxt" MaxLength="50" HorizontalAlignment="Left" Height="23" Margin="182,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" BorderThickness="5"/>
        <ComboBox x:Name="ClientReminderCB" HorizontalAlignment="Left" Margin="308,101,0,0" VerticalAlignment="Top" Width="62" BorderThickness="5">
            <ComboBoxItem Content="Text"/>
            <ComboBoxItem Content="Email"/>
            <ComboBoxItem Content="Phone"/>
            <ComboBoxItem Content="Postcard"/>
        </ComboBox>
        <Label Content="Current Clients" HorizontalAlignment="Left" Margin="637,26,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>


        <TextBox x:Name="ClientAddressTxt" MaxLength="50" HorizontalAlignment="Left" Height="23" Margin="64,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" BorderThickness="5"/>
        <TextBox x:Name="ClientCityTxt" MaxLength="50" HorizontalAlignment="Left" Height="23" Margin="308,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="62" BorderThickness="5"/>
