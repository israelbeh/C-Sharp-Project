        <Separator HorizontalAlignment="Left" Height="64" Margin="231,169,0,0" VerticalAlignment="Top" Width="412" RenderTransformOrigin="0.5,0.5" BorderThickness="0">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.001"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>



        <Label Content="Degree" HorizontalAlignment="Left" Margin="299,74,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.302,0.519" FontWeight="Bold" BorderThickness="5"/>

        <Button x:Name="CounselorDeleteBtn" Content="Delete Counselor" HorizontalAlignment="Left" Margin="768,324,0,0" VerticalAlignment="Top" Width="124" ToolTip="Click to Delete Selected Counselor" Click="CounselorDeleteBtn_Click" BorderThickness="5" FontWeight="Bold"/>
        <Button x:Name="CounselorEditBtn" Content="Edit Counselor" HorizontalAlignment="Left" Margin="545,324,0,0" VerticalAlignment="Top" Width="124" ToolTip="Click to Edit Selected Counselor" Click="CounselorEditBtn_Click" BorderThickness="5" FontWeight="Bold"/>
        <Label Content="" HorizontalAlignment="Left" Margin="557,308,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="5"/>

        <Label Content="City" HorizontalAlignment="Left" Margin="275,126,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="5"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="902,360,0,0" VerticalAlignment="Top" Width="87" Click="Button_Click_1" Height="29" ToolTip="Click to Close window and return to home screen" BorderThickness="5" FontWeight="Bold"/>



    </Grid>
</Window>
