        <Button x:Name="CounselorPreviousBtn" Content="&lt;" HorizontalAlignment="Left" Margin="624,273,0,0" VerticalAlignment="Top" Width="76" ToolTip="Select Previous Record" Click="CounselorPreviousBtn_Click" BorderThickness="5" FontWeight="Bold"/>
