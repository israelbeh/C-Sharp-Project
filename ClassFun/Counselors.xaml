        <Label Content="Phone" HorizontalAlignment="Left" Margin="275,185,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="0"/>
        <Label Content="ZIP Code" HorizontalAlignment="Left" Margin="153,185,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="0"/>
        <Label Content="Email Address" HorizontalAlignment="Left" Margin="64,238,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="5"/>
        <Label Content="State" HorizontalAlignment="Left" Margin="61,185,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="5"/>
