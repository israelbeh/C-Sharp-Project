        <Button x:Name="CounselorLastBtn" Content="&gt;&gt;" HorizontalAlignment="Left" Margin="847,273,0,0" VerticalAlignment="Top" Width="76" ToolTip="Select Last Record" Click="CounselorLastBtn_Click" BorderThickness="5" FontWeight="Bold"/>
