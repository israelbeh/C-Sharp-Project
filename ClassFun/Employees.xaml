            <ComboBoxItem Content="MD" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="MA" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="MI" HorizontalAlignment="Left" Width="130"/>
            <ComboBoxItem Content="MN" HorizontalAlignment="Left" Width="130"/>
