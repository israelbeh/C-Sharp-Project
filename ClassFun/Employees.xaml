        <Label Content="Add/Update Employee" HorizontalAlignment="Left" Margin="86,26,0,0" VerticalAlignment="Top" Width="264" FontSize="22" FontWeight="Bold"/>

        <DataGrid x:Name="EmployeeDataGrid" IsReadOnly="True" HorizontalAlignment="Left" Margin="472,74,0,0" VerticalAlignment="Top" Height="190" Width="482" BorderThickness="5" FontWeight="Bold"/>
        <Label Content="Current Employees" HorizontalAlignment="Left" Margin="614,21,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>
        <Button x:Name="EmployeeFirstBtn" Content="&lt;&lt;" HorizontalAlignment="Left" Margin="512,273,0,0" VerticalAlignment="Top" Width="75" ToolTip="Select First Record" Click="EmployeeFirstBtn_Click_1" BorderThickness="5" FontWeight="Bold"/>
        <Button x:Name="EmployeePreviousBtn" Content="&lt;" HorizontalAlignment="Left" Margin="623,273,0,0" VerticalAlignment="Top" Width="76" ToolTip="Select Previous Record" Click="EmployeePreviousBtn_Click_1" BorderThickness="5" FontWeight="Bold"/>
        <Button x:Name="EmployeeNextBtn" Content="&gt;" HorizontalAlignment="Left" Margin="734,273,0,0" VerticalAlignment="Top" Width="76" ToolTip="Select Next Record" Click="EmployeeNextBtn_Click_1" BorderThickness="5" FontWeight="Bold"/>
        <Button x:Name="EmployeeLastBtn" Content="&gt;&gt;" HorizontalAlignment="Left" Margin="847,273,0,0" VerticalAlignment="Top" Width="76" ToolTip="Select Last Record" Click="EmployeeLastBtn_Click_1" BorderThickness="5" FontWeight="Bold"/>
        <Separator HorizontalAlignment="Left" Height="100" Margin="238,170,0,0" VerticalAlignment="Top" Width="408" RenderTransformOrigin="0.5,0.5" BorderThickness="0">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.001"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Button x:Name="EmployeeEditBtn" Content="Edit Employee" HorizontalAlignment="Left" Margin="553,324,0,0" VerticalAlignment="Top" Width="115" ToolTip="Click to Edit Selected Employee" Click="EmployeeEditBtn_Click_1" BorderThickness="5" FontWeight="Bold"/>



        <Label Content="Wage" HorizontalAlignment="Left" Margin="234,70,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.302,0.519" FontWeight="Bold" />

        <Button x:Name="EmployeeDeleteBtn" Content="Delete Employee" HorizontalAlignment="Left" Margin="772,324,0,0" VerticalAlignment="Top" Width="136" ToolTip="Click to Delete Selected Employee" Click="EmployeeDeleteBtn_Click_1" BorderThickness="5" FontWeight="Bold"/>

        <Label Content="City" HorizontalAlignment="Left" Margin="64,184,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="0" Height="27" Width="38"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="896,372,0,0" VerticalAlignment="Top" Width="78" Click="Button_Click_1" Height="31"  FontWeight="Bold" BorderThickness="5" ToolTip="Click to Close window and return to home screen"/>

        <Label Content="Supervisor" HorizontalAlignment="Left" Margin="64,130,0,0" VerticalAlignment="Top" FontWeight="Bold" />


