        <Button x:Name="EmployeeUpdateBtn" Content="Update" HorizontalAlignment="Left" Margin="275,318,0,0" VerticalAlignment="Top" Width="75" Height="34" ToolTip="Click update to save changes " Click="EmployeeUpdateBtn_Click_1" BorderThickness="5" FontWeight="Bold"/>
